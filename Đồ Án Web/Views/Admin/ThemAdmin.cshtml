                @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoTenAD, htmlAttributes: new { @class = "control-label col-md-2" })
