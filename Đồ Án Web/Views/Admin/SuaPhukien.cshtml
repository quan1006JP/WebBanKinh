@model  Đồ_Án_Web.Models.PhuKien

@{ ViewBag.Title = "SuaPhukien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<br />
<br />
<h2>Sửa Thông Tin Phụ Kiện</h2>
<br />

@using (Html.BeginForm("SuaPhukien", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaPK)
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaPK, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div style="font:18px;padding:5px 0 0 5px">@Model.MaPK</div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenPhuKien, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenPhuKien, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenPhuKien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GiaBanPK, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiaBanPK, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GiaBanPK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AnhBiaPK, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Chọn ảnh mới
                            <input type="file" name="fileUpload" />
                            <img src="@Url.Content("~/img/"+ Model.AnhBiaPK)" width="120" />(Ảnh hiện tại)
                            @*Thong bao trung*@
                            @ViewBag.Thongbao

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTaPK, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="chiTietSP">@Model.MoTaPK</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaLPK, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaLPK")
                        </div>
                    </div>
                    @*
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaHSX, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("MaHSX")

                            </div>
                        </div>*@

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>}

<div>
    @Html.ActionLink("Back to List", "PhuKien")
</div>

